<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assessment.welcomeFragment">



    <ImageView
        android:id="@+id/back"
        android:layout_width="12dp"
        android:layout_height="16dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back"
        android:layout_marginStart="305dp"
        android:layout_marginTop="38dp"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/progressbar"
        android:layout_width="280dp"
        android:layout_height="10dp"
        android:src="@drawable/loading"
        android:layout_marginTop="48dp"
        android:layout_marginStart="54dp"/>


    <ImageView
        android:layout_width="168dp"
        android:layout_height="10dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/loadingprogress" />

    <TextView
        android:id="@+id/equpiments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What equipments do you have access to ?  "
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="38dp"
        android:layout_marginStart="24dp"/>

    <Button
        android:id="@+id/barbells"
        android:layout_width="369dp"
        android:layout_height="80dp"
        android:layout_below="@+id/equpiments"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="#E4F9FF"
        android:drawableLeft="@drawable/barbells"
        android:text="Barbells"
        android:textAllCaps="false"
        android:textSize="18dp" />
    />

    <Button
        android:id="@+id/dembells"
        android:layout_width="369dp"
        android:layout_height="80dp"
        android:layout_below="@+id/barbells"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="#E4F9FF"
        android:drawableLeft="@drawable/dumbells"
        android:text="Dumbells"
        android:textAllCaps="false"
        android:textSize="18dp" />
    />


    <Button
        android:id="@+id/cablemachine"
        android:layout_width="369dp"
        android:layout_height="80dp"
        android:background="#E4F9FF"
        android:layout_below="@+id/dembells"
        android:drawableLeft="@drawable/cablemacine"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Cable Machine"
        android:textAllCaps="false"
        android:textSize="18dp"/>
    />



    <Button
        android:id="@+id/weightMachine"
        android:layout_width="369dp"
        android:layout_height="80dp"
        android:background="#E4F9FF"
        android:layout_below="@+id/cablemachine"
        android:drawableLeft="@drawable/weight"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Weight Machine"
        android:textAllCaps="false"
        android:textSize="18dp"/>
    />


    <Button
        android:id="@+id/contninueBtn6"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:background="@drawable/cont"
        android:layout_below="@id/weightMachine"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>



</RelativeLayout>