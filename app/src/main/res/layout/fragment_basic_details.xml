<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assessment.welcomeFragment">



    <ImageView
        android:id="@+id/back"
        android:layout_width="12dp"
        android:layout_height="16dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back"
        android:layout_marginStart="305dp"
        android:layout_marginTop="38dp"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/progressbar"
        android:layout_width="280dp"
        android:layout_height="10dp"
        android:src="@drawable/loading"
        android:layout_marginTop="48dp"
        android:layout_marginStart="54dp"/>


    <ImageView
        android:layout_width="104dp"
        android:layout_height="10dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/loadingprogress" />

    <TextView
        android:id="@+id/basics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us your basics. "
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="38dp"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/EtAge"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:hint="Your Agr"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/white"
        android:background="#E4F9FF"
        android:layout_below="@+id/basics"/>

    <EditText
        android:id="@+id/EtHeight"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_below="@+id/EtAge"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="#E4F9FF"
        android:hint="Your Height"
        android:textColor="@color/white" />
    <EditText
        android:id="@+id/EtWeight"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:hint="Your Weight"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/white"
        android:background="#E4F9FF"
        android:layout_below="@+id/EtHeight"/>

    <EditText
        android:id="@+id/EtGoalWeight"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_below="@+id/EtWeight"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="#E4F9FF"
        android:hint="Your Goal Weight"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/contninueBtn4"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:background="@drawable/cont"
        android:layout_below="@id/EtGoalWeight"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>



</RelativeLayout>

