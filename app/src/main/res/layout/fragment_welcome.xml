<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assessment.welcomeFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="12dp"
        android:layout_height="16dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back"
        android:layout_marginStart="300dp"
        android:layout_marginTop="35dp"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="18dp"/>


    <ImageView
        android:id="@+id/instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/instructor" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/instructor"
        android:textSize="28dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="The following quick assessment will help us presonilize your daily Fitness routine Diet plan "
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/welcome"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/continueBtn1"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:background="@drawable/cont"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="Continue"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>