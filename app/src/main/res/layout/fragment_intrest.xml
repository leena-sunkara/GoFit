<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assessment.WelcomeFragment">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/progressbar"
        android:layout_width="260dp"
        android:layout_height="10dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/loading" />

    <ImageView
        android:layout_width="136dp"
        android:layout_height="10dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/loadingprogress" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbar"
        android:layout_margin="20dp"
        android:text="Which activites intrest you ?"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/yoga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goal"
        android:layout_margin="20dp"
        android:layout_marginStart="24dp"
        android:background="#E4F9FF"
        android:drawableStart="@drawable/yoga"
        android:text="Yoga"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/hit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yoga"
        android:layout_margin="20dp"
        android:background="#E4F9FF"
        android:drawableLeft="@drawable/hit"
        android:text="Hit"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/kicboxing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hit"
        android:layout_margin="20dp"
        android:layout_marginStart="24dp"
        android:background="#E4F9FF"
        android:drawableLeft="@drawable/kicboxing"
        android:text="Kic-Boxing"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/weightlifting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kicboxing"
        android:layout_margin="20dp"
        android:layout_marginStart="24dp"
        android:background="#E4F9FF"
        android:drawableLeft="@drawable/lifting"
        android:text="Weight lifting"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/contninueBtn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightlifting"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/cont"
        android:text="Continue"
        android:textColor="@color/white" />

</RelativeLayout>

