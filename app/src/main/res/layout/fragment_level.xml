<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assessment.WelcomeFragment">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/progressbar"
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/loading" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/loadingprogress" />

    <TextView
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's your current level of fitness?  "
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@+id/progressbar"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/beginner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level"
        android:layout_margin="20dp"
        android:background="#E4F9FF"
        android:text="Beginner"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <Button
        android:id="@+id/intermidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beginner"
        android:layout_margin="20dp"
        android:background="#E4F9FF"
        android:text="Intermediate"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <Button
        android:id="@+id/advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4F9FF"
        android:layout_below="@+id/intermidate"
        android:layout_margin="20dp"
        android:text="Advanced"
        android:textAllCaps="false"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/contninueBtn7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/advance"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/cont"
        android:text="Continue"
        android:textColor="@color/white" />

</RelativeLayout>

